{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "@domains/*": ["./domains/*"],
      "@graphql/*": ["./generated/graphql/*"],
      "@pages/*": ["./pages/*"],
      "@styles/*": ["./styles/*"]
    },
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "bin", "cypress.config.ts", "cypress"]
}
